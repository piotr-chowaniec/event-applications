{
  "name": "event-applications",
  "version": "1.0.0",
  "description": "",
  "author": "Piotr Chowaniec",
  "license": "ISC",
  "main": "index.js",
  "engines": {
    "node": "12.18.3",
    "npm": "6.14.6"
  },
  "scripts": {
    "start": "node index.js | bunyan",
    "server": "nodemon --ignore 'client/*' index.js | bunyan",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install:all": "npm i && npm i --prefix client",
    "lint": "eslint .",
    "pre-push:client": "cd client && CI=1 npm run lint",
    "pre-push": "npm run lint && npm run pre-push:client"
  },
  "dependencies": {
    "@common-packages/validators": "file:./commonPackages/validators",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.14",
    "express": "^4.17.1",
    "http-status-codes": "^1.4.0",
    "path": "^0.12.7",
    "yup": "^0.29.3"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "commander": "^6.0.0",
    "concurrently": "^5.3.0",
    "eslint": "^6.8.0",
    "eslint-config-brainhub": "^1.13.0",
    "husky": "^4.2.5",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run pre-push"
    }
  }
}
